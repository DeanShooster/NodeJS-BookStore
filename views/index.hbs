        <!-- Book Modal -->
        <div id= 'book_modal_container'>
            <div id='book_information' class='hidden'>
                <h2><u>Book Information</u></h2>
                <button id='add_book_cart'>Add Book</button>
                <h3 id='book_information_close'>Close</h3>
            </div>
        </div>
        
        <!-- Cart Modal -->
        <div id='cart_modal' class='hidden'>
            <h1><u>User Cart</u></h1>
            <div id='cart_book_container'>

            </div>
            <button id='buy_books'>Buy</button>
            <h3 id='cart_close'>Close</h3>
        </div>

    </body>
    <script src='/javascript/index.js'></script>
</html>